---
import MainLayout from "@/layouts/MainLayout.astro";
import { sanityClient, urlFor } from "@/lib/sanity";
import { Icon } from "astro-icon/components";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import type { DevProject } from "@/lib/sanity";

export async function getStaticPaths() {
  const query = `*[_type == "devProject"]{ "slug": slug.current }`;
  const projects = await sanityClient.fetch(query);

  return projects.map((project: { slug: string }) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;

const query = `*[_type == "devProject" && slug.current == $slug][0]{
  title,
  subtitle,
  mainImage,
  summary,
  role,
  client,
  timeline,
  status,
  liveUrl,
  repoLinks,
  techStack,
  keyFeatures,
  gallery
}`;

const project = await sanityClient.fetch<DevProject>(query, { slug });

if (!project) return Astro.redirect("/404");

const statusColors: Record<string, string> = {
  ongoing:
    "bg-amber-50 text-amber-700 border-amber-200 dark:bg-amber-950/40 dark:text-amber-200 dark:border-amber-900/60",
  completed:
    "bg-emerald-50 text-emerald-700 border-emerald-200 dark:bg-emerald-950/40 dark:text-emerald-200 dark:border-emerald-900/60",
  archived:
    "bg-zinc-100 text-zinc-700 border-zinc-200 dark:bg-zinc-900/60 dark:text-zinc-200 dark:border-zinc-800",
};
---

<MainLayout
  title={`${project.title} | Case Study`}
  description={project.summary}
>
  <article class="animate-in fade-in duration-500">
    <header class="mb-10 md:mb-12 border-b border-border pb-10 md:pb-12">
      <div class="mb-6 flex flex-wrap items-center gap-3 md:gap-4">
        <a
          href="/"
          class="inline-flex items-center text-sm font-medium text-muted-foreground hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
        >
          <Icon name="ph:arrow-left-bold" class="mr-2 w-4 h-4" />
          Back to Projects
        </a>
        <span
          class={`px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider border ${statusColors[project.status || "completed"]}`}
        >
          {project.status || "Completed"}
        </span>
      </div>

      <h1
        class="text-3xl sm:text-4xl md:text-6xl font-extrabold tracking-tight text-foreground mb-4"
      >
        {project.title}
      </h1>

      {
        project.subtitle && (
          <p class="text-lg sm:text-xl md:text-2xl text-muted-foreground max-w-3xl leading-relaxed">
            {project.subtitle}
          </p>
        )
      }
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 md:gap-12 lg:gap-24">
      <div class="lg:col-span-2 space-y-10 md:space-y-12">
        {
          project.mainImage && (
            <div class="rounded-2xl overflow-hidden shadow-sm border border-border bg-card">
              <img
                src={urlFor(project.mainImage).width(1200).height(800).url()}
                alt={project.title}
                class="w-full h-auto object-cover md:hover:scale-105 motion-reduce:transform-none transition-transform duration-700"
              />
            </div>
          )
        }

        <section class="prose prose-zinc prose-lg dark:prose-invert max-w-none">
          <h3 class="text-2xl font-bold text-foreground mb-4">
            Executive Summary
          </h3>
          <p class="text-muted-foreground leading-relaxed">
            {project.summary}
          </p>
        </section>

        {
          project.keyFeatures && (
            <section>
              <h3 class="text-2xl font-bold text-foreground mb-6 flex items-center gap-2">
                <Icon
                  name="ph:star-four-fill"
                  class="text-blue-600 dark:text-blue-400 w-6 h-6"
                />
                Key Features
              </h3>
              <div class="grid gap-4 md:grid-cols-2">
                {project.keyFeatures.map((feature: string) => (
                  <div class="flex gap-3 p-4 rounded-xl bg-card border border-border">
                    <Icon
                      name="ph:check-circle-fill"
                      class="text-emerald-600 dark:text-emerald-400 w-6 h-6 flex-shrink-0 mt-0.5"
                    />
                    <span class="text-foreground/90 font-medium">{feature}</span>
                  </div>
                ))}
              </div>
            </section>
          )
        }

        {
          project.gallery && (
            <section class="space-y-6">
              <h3 class="text-2xl font-bold text-foreground">Project Gallery</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {project.gallery.map((image: any) => (
                  <div class="group relative rounded-xl overflow-hidden border border-border bg-card">
                    <img
                      src={urlFor(image).width(600).height(400).url()}
                      alt="Gallery"
                      class="w-full h-full object-cover"
                    />
                    {image.caption && (
                      <div class="absolute bottom-0 left-0 right-0 bg-black/60 backdrop-blur-sm p-3 translate-y-full group-hover:translate-y-0 transition-transform">
                        <p class="text-white text-xs font-medium">
                          {image.caption}
                        </p>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </section>
          )
        }
      </div>

      <aside class="lg:col-span-1">
        <div
          class="lg:sticky lg:top-32 space-y-8 p-5 sm:p-6 rounded-2xl bg-card border border-border shadow-sm"
        >
          <div class="space-y-6">
            <h3 class="text-lg font-bold text-foreground flex items-center gap-2">
              <Icon name="ph:info-bold" class="text-muted-foreground" />
              Project Info
            </h3>

            <dl class="space-y-4 text-sm">
              <div class="flex items-start justify-between gap-4 py-2 border-b border-border/60">
                <dt class="text-muted-foreground">Role</dt>
                <dd class="font-medium text-foreground text-right">
                  {project.role || "Full Stack Dev"}
                </dd>
              </div>
              <div class="flex items-start justify-between gap-4 py-2 border-b border-border/60">
                <dt class="text-muted-foreground">Client</dt>
                <dd class="font-medium text-foreground text-right">
                  {project.client || "Personal Project"}
                </dd>
              </div>
              <div class="flex items-start justify-between gap-4 py-2 border-b border-border/60">
                <dt class="text-muted-foreground">Timeline</dt>
                <dd class="font-medium text-foreground text-right">
                  {project.timeline || "2024"}
                </dd>
              </div>
            </dl>
          </div>

          <div class="space-y-3">
            <h3
              class="text-sm font-semibold text-muted-foreground uppercase tracking-wider"
            >
              Tech Stack
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                project.techStack?.map((tech: string) => (
                  <Badge variant="secondary" className="px-3 py-1 text-sm">
                    {tech}
                  </Badge>
                ))
              }
            </div>
          </div>

          <div class="space-y-3 pt-4 border-t border-border/60">
            {
              project.liveUrl && (
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block"
                >
                  <Button className="w-full gap-2 font-semibold">
                    <Icon name="ph:globe-bold" class="w-4 h-4" />
                    Visit Live Site
                  </Button>
                </a>
              )
            }

            {
              project.repoLinks?.map((repo: any) => (
                <a
                  href={repo.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block"
                >
                  <Button
                    variant="outline"
                    className="w-full gap-2"
                  >
                    <Icon name="ph:github-logo-bold" class="w-4 h-4" />
                    {repo.label || "View Source Code"}
                  </Button>
                </a>
              ))
            }
          </div>
        </div>
      </aside>
    </div>
  </article>
</MainLayout>
