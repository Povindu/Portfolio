---
import MainLayout from "@/layouts/MainLayout.astro";
import { sanityClient, urlFor } from "@/lib/sanity";
import { Icon } from "astro-icon/components";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { BlurFade } from "@/components/ui/blur-fade";
import type { DevProject } from "@/lib/sanity";

export async function getStaticPaths() {
  const query = `*[_type == "devProject"]{ "slug": slug.current }`;
  const projects = await sanityClient.fetch(query);

  return projects.map((project: { slug: string }) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;

const query = `*[_type == "devProject" && slug.current == $slug][0]{
  title,
  subtitle,
  mainImage,
  summary,
  role,
  client,
  timeline,
  status,
  liveUrl,
  repoLinks,
  techStack,
  keyFeatures,
  gallery
}`;

const project = await sanityClient.fetch<DevProject>(query, { slug });

if (!project) return Astro.redirect("/404");

const statusColors: Record<string, string> = {
  ongoing:
    "bg-amber-100 text-amber-700 border-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:border-amber-800",
  completed:
    "bg-emerald-100 text-emerald-700 border-emerald-200 dark:bg-emerald-900/30 dark:text-emerald-300 dark:border-emerald-800",
  archived:
    "bg-zinc-100 text-zinc-700 border-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:border-zinc-700",
};
---

<MainLayout
  title={`${project.title} | Case Study`}
  description={project.summary}
>
  <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 md:py-16">
    <BlurFade delay={0.1} inView client:load>
      <header
        class="mb-10 md:mb-16 border-b border-zinc-200 dark:border-zinc-800 pb-10 md:pb-12"
      >
        <div class="mb-6 flex flex-wrap items-center justify-between gap-4">
          <a
            href="/#projects"
            class="group inline-flex items-center text-sm font-medium text-zinc-500 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
          >
            <div
              class="mr-2 rounded-full p-1 bg-zinc-100 dark:bg-zinc-800 group-hover:bg-zinc-200 dark:group-hover:bg-zinc-700 transition-colors"
            >
              <Icon name="ph:arrow-left-bold" class="w-4 h-4" />
            </div>
            Back to Projects
          </a>

          <Badge
            variant="outline"
            className={`px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider border ${statusColors[project.status || "completed"]}`}
          >
            {project.status || "Completed"}
          </Badge>
        </div>

        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight text-zinc-900 dark:text-white mb-6 font-geist"
        >
          {project.title}
        </h1>

        {
          project.subtitle && (
            <p class="text-xl md:text-2xl text-zinc-600 dark:text-zinc-400 max-w-3xl leading-relaxed">
              {project.subtitle}
            </p>
          )
        }
      </header>
    </BlurFade>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 md:gap-12 lg:gap-16">
      <div class="lg:col-span-2 space-y-12 md:space-y-16">
        {
          project.mainImage && (
            <BlurFade delay={0.2} inView client:load>
              <div class="rounded-2xl overflow-hidden shadow-2xl border border-zinc-200 dark:border-zinc-800 bg-zinc-100 dark:bg-zinc-900">
                <img
                  src={urlFor(project.mainImage).width(1200).height(800).url()}
                  alt={project.title}
                  class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-700 ease-in-out"
                />
              </div>
            </BlurFade>
          )
        }
        <BlurFade delay={0.3} inView client:load>
          <section
            class="prose prose-zinc prose-lg dark:prose-invert max-w-none"
          >
            <h3 class="text-2xl font-bold text-zinc-900 dark:text-white mb-4">
              Executive Summary
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed text-lg">
              {project.summary}
            </p>
          </section>
        </BlurFade>

        {
          project.keyFeatures && (
            <BlurFade delay={0.4} inView client:load>
              <section>
                <h3 class="text-2xl font-bold text-zinc-900 dark:text-white mb-6 flex items-center gap-2">
                  <Icon
                    name="ph:star-four-fill"
                    class="text-zinc-900 dark:text-white w-5 h-5"
                  />
                  Key Features
                </h3>
                <div class="grid gap-4 sm:grid-cols-2">
                  {project.keyFeatures.map((feature: string) => (
                    <div class="flex gap-3 p-4 rounded-xl bg-zinc-50 dark:bg-zinc-900/50 border border-zinc-200 dark:border-zinc-800 hover:border-zinc-300 dark:hover:border-zinc-700 transition-colors">
                      <Icon
                        name="ph:check-circle-fill"
                        class="text-zinc-900 dark:text-white w-5 h-5 flex-shrink-0 mt-0.5"
                      />
                      <span class="text-zinc-700 dark:text-zinc-300 font-medium leading-relaxed">
                        {feature}
                      </span>
                    </div>
                  ))}
                </div>
              </section>
            </BlurFade>
          )
        }

        {
          project.gallery && (
            <BlurFade delay={0.5} inView client:load>
              <section class="space-y-6">
                <h3 class="text-2xl font-bold text-zinc-900 dark:text-white">
                  Project Gallery
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {project.gallery.map((image: any) => (
                    <div class="group relative rounded-xl overflow-hidden border border-zinc-200 dark:border-zinc-800 bg-zinc-100 dark:bg-zinc-900 aspect-video shadow-sm hover:shadow-md transition-shadow">
                      <img
                        src={urlFor(image).width(800).height(600).url()}
                        alt="Gallery"
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      />
                      {image.caption && (
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                          <p class="text-white text-sm font-medium">
                            {image.caption}
                          </p>
                        </div>
                      )}
                    </div>
                  ))}
                </div>
              </section>
            </BlurFade>
          )
        }
      </div>

      <aside class="lg:col-span-1">
        <div class="lg:sticky lg:top-24 space-y-8">
          <BlurFade delay={0.6} inView client:load>
            <div
              class="p-6 rounded-2xl bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 shadow-sm"
            >
              <div class="space-y-6">
                <h3
                  class="text-lg font-bold text-zinc-900 dark:text-white flex items-center gap-2"
                >
                  <Icon name="ph:info-bold" class="text-zinc-500" />
                  Project Info
                </h3>

                <dl class="space-y-4 text-sm">
                  <div
                    class="flex items-start justify-between gap-4 py-3 border-b border-zinc-100 dark:border-zinc-800"
                  >
                    <dt class="text-zinc-500 dark:text-zinc-400">Role</dt>
                    <dd
                      class="font-medium text-zinc-900 dark:text-zinc-100 text-right"
                    >
                      {project.role || "Full Stack Dev"}
                    </dd>
                  </div>
                  <div
                    class="flex items-start justify-between gap-4 py-3 border-b border-zinc-100 dark:border-zinc-800"
                  >
                    <dt class="text-zinc-500 dark:text-zinc-400">Client</dt>
                    <dd
                      class="font-medium text-zinc-900 dark:text-zinc-100 text-right"
                    >
                      {project.client || "Personal Project"}
                    </dd>
                  </div>
                  <div
                    class="flex items-start justify-between gap-4 py-3 border-b border-zinc-100 dark:border-zinc-800"
                  >
                    <dt class="text-zinc-500 dark:text-zinc-400">Timeline</dt>
                    <dd
                      class="font-medium text-zinc-900 dark:text-zinc-100 text-right"
                    >
                      {project.timeline || "2024"}
                    </dd>
                  </div>
                </dl>
              </div>

              <div class="space-y-4 mt-8">
                <h3
                  class="text-xs font-bold text-zinc-500 uppercase tracking-wider"
                >
                  Tech Stack
                </h3>
                <div class="flex flex-wrap gap-2">
                  {
                    project.techStack?.map((tech: string) => (
                      <Badge
                        variant="secondary"
                        className="px-3 py-1 text-xs font-medium bg-zinc-100 text-zinc-800 dark:bg-zinc-800 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700 border-transparent"
                      >
                        {tech}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div
                class="space-y-3 pt-6 mt-6 border-t border-zinc-100 dark:border-zinc-800"
              >
                {
                  project.liveUrl && (
                    <a
                      href={project.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block"
                    >
                      <Button className="w-full gap-2 font-semibold bg-zinc-900 text-white hover:bg-zinc-800 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-200">
                        <Icon name="ph:globe-bold" class="w-4 h-4" />
                        Visit Live Site
                      </Button>
                    </a>
                  )
                }

                {
                  project.repoLinks?.map((repo: any) => (
                    <a
                      href={repo.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block"
                    >
                      <Button
                        variant="outline"
                        className="w-full gap-2 border-zinc-200 dark:border-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-50 dark:hover:bg-zinc-800"
                      >
                        <Icon name="ph:github-logo-bold" class="w-4 h-4" />
                        {repo.label || "View Source Code"}
                      </Button>
                    </a>
                  ))
                }
              </div>
            </div>
          </BlurFade>
        </div>
      </aside>
    </div>
  </article>
</MainLayout>
