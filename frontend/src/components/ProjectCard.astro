---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
import type { DevProject } from "@/lib/sanity";
import { getTechIconName } from "@/lib/techIcons";

interface Props {
  project: DevProject;
}

const { project } = Astro.props;

const MAX_LENGTH = 220;
const summaryText =
  project?.summary?.length && project?.summary?.length > MAX_LENGTH
    ? project?.summary?.substring(0, MAX_LENGTH) + "..."
    : project?.summary;
---

<Card
  className="flex flex-col w-full h-[420px] hover:shadow-lg transition-all duration-300 border border-zinc-200 dark:border-zinc-900 bg-zinc-100 dark:bg-zinc-900/50"
>
  <CardHeader className="pb-4">
    <div class="flex justify-between items-start gap-4">
      <div class="space-y-1">
        <CardTitle
          className="text-xl font-bold tracking-tight text-card-foreground line-clamp-1 font-geist mt-1"
          title={project.title}
        >
          {project.title}
        </CardTitle>
        <CardDescription
          className="text-sm text-zinc-700 dark:text-zinc-400 line-clamp-1 font-geist font-normal"
        >
          {project.subtitle}
        </CardDescription>
      </div>
      <div class="p-2 bg-accent rounded-full text-accent-foreground shrink-0">
        <Icon name="ph:code-bold" class="w-5 h-5" />
      </div>
    </div>
  </CardHeader>

  <CardContent
    className="flex-grow flex flex-col justify-between overflow-hidden pb-2"
  >
    <p
      class="text-zinc-700 dark:text-zinc-300 leading-relaxed text-sm mb-4 h-[140px] overflow-hidden text-ellipsis break-words"
    >
      {summaryText}
    </p>

    <div class="flex flex-wrap gap-2 mt-auto content-end">
      {
        project.techStack?.slice(0, 4).map((tech) => {
          const iconName = getTechIconName(tech);
          return (
            <Badge
              variant="secondary"
              className="px-2 py-0.5 text-xs font-medium flex items-center gap-1"
            >
              {iconName && <Icon name={iconName} class="w-3.5 h-3.5" />}
              <span>{tech}</span>
            </Badge>
          );
        })
      }
      {
        project.techStack && project.techStack.length > 4 && (
          <Badge variant="outline" className="px-2 py-0.5 text-xs">
            +{project.techStack.length - 4}
          </Badge>
        )
      }
    </div>
  </CardContent>

  <CardFooter className="pt-4 border-t border-border mt-auto">
    <a href={`/projects/${project.slug?.current}`} class="w-full">
      <Button variant="default" className="w-full gap-2 group font-geist">
        View Case Study
        <Icon
          name="ph:arrow-right-bold"
          class="w-4 h-4 group-hover:translate-x-1 transition-transform"
        />
      </Button>
    </a>
  </CardFooter>
</Card>
